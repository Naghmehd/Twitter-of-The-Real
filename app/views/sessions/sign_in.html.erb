<div class="container">
  <div class = "col-md-6">
    <h1>Hello! Please Sign In</h1>
      <%= form_tag '/sign_in', method: :POST do %>

      <div class="field">
        <%= label_tag :username %><br>
        <%= text_field_tag :username %>
      </div>

      <div class ="field">
        <%= label_tag :password %><br>
        <%= password_field_tag :password %>
      </div>

      <div class="actions">
        <%= submit_tag value="login"%>
      </div>
      <% end %>
  </div>
</div>
